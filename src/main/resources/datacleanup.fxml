<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?> 
<?import javafx.collections.*?> 
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import fxmltableview.*?> 
<?import t.cubed.fxml.*?>

<BorderPane fx:id="rootPane" styleClass="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="it.eup.loganalyser.gui.DatacleanupController">
	<center>
		<VBox spacing="10">
			<children>
				<Label text="Bitte wählen Sie die zu löschenden Quellen aus" />

				<TableView fx:id="tableView" maxHeight="400" minWidth="400" prefWidth="600">
					<columns>
						<TableColumn text="Pfad">
							<cellValueFactory>
								<PropertyValueFactory property="path" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn text="Importiert am">
							<cellValueFactory>
								<PropertyValueFactory property="importDate" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn text="Anzahl Log-Einträge">
							<cellValueFactory>
								<PropertyValueFactory property="totalCount" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn text="Importiert">
							<cellValueFactory>
								<PropertyValueFactory property="successCount" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn text="Fehler">
							<cellValueFactory>
								<PropertyValueFactory property="errorsCount" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn text="Gefiltert">
							<cellValueFactory>
								<PropertyValueFactory property="filteredCount" />
							</cellValueFactory>
						</TableColumn>
					</columns>
				</TableView>

				<HBox>
					<Button text="Löschen" onAction="#doCleanup" />
					<Button text="Fertig" onAction="#closeDialog" />
				</HBox>
			</children>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</VBox>
	</center>
</BorderPane>
